#!/bin/bash
##========================  ramroot (build hook)  ========================##
# Place in: /usb/lib/initcpio/install/

build() {
    add_dir /local_root
    add_dir /zram_root
    add_file /etc/ramroot.conf
    add_module ext4
    add_module vfat
    add_module zram
    add_binary zramctl
    add_binary mkfs.ext4
    add_binary cp
    add_runscript
}

help() {
    cat <<HELPEOF
This hook provides the option to load the root filesystem completely
into RAM during boot.
HELPEOF
}
